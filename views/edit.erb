<form action="memos/<%= @id %>" method="POST">
  <div class="form_item">
    <input type="hidden" name="_method", value="PATCH">
    <input type="text" name="title" class="form_item_text_input" value="<%= h @memo_title %>" required="required" placeholder="題名">
    <textarea name="content" class="form_item_text_input" placeholder="内容"><%= h @content %></textarea>
    <input type="submit" value="保存" class="form_item_button">
  </div>
</form>
